{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "declaration": true,        // 生成声明文件
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"]
}